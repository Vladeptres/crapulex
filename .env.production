# Production Environment Configuration
# Copy this to .env and update with your actual values

# CRITICAL: Change these default values for production!
MONGO_ROOT_USERNAME=bourracho_admin
MONGO_ROOT_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!
MONGO_DB_NAME=bourracho_production

# Django Security - Generate a new secret key!
BOURRACHO_SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_50_CHAR_STRING
DEBUG=false

# Redis Authentication
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456!

# Domain Configuration - Replace with your actual domain
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
CORS_ALLOWED_ORIGINS=https://bourracho.vercel.app,https://your-domain.com

# MongoDB Sharded Cluster Configuration
# Connection string for mongos routers (load balanced)
MONGO_DB_URL=mongodb://bourracho_admin:CHANGE_THIS_STRONG_PASSWORD_123!@mongos-1:27017,mongos-2:27017/bourracho_production?authSource=admin&readPreference=secondaryPreferred

# AWS S3 Configuration (optional)
S3_BUCKET_NAME=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# Email Configuration (for Let's Encrypt)
LETSENCRYPT_EMAIL=admin@your-domain.com
